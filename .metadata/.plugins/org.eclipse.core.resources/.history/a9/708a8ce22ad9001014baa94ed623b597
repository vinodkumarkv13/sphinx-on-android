#ifndef GQRECORD_H_
#define GQRECORD_H_

class GqRecord {
public:
	bool start_sl_record();
	bool stop_sl_record();

private:
	bool create_sl_engine();
	bool create_sl_recorder();

private:
	void callback_sl_record(SLAndroidSimpleBufferQueueItf bq, void *context);


private:
	// engine interfaces
	SLObjectItf m_sl_engine_object;
	SLEngineItf m_sl_engine;

	// recorder interfaces
	SLObjectItf m_sl_recorder_object;
	SLRecordItf recorderRecord;
	SLAndroidSimpleBufferQueueItf recorderBufferQueue;
};


#endif /* GQRECORD_H_ */

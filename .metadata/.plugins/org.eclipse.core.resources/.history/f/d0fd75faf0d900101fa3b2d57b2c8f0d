#ifndef GQRECORD_H_
#define GQRECORD_H_

#include <SLES/OpenSLES.h>
#include <SLES/OpenSLES_Android.h>

class IGqRecord {
public:
	IGqRecord() {}
	virtual ~IGqRecord() {}

public:
	virtual bool start_record() = 0;
	virtual bool pause_record() = 0;
	virtual bool stop_record() = 0;

protected:
	virtual void received_buf_from_recorder(char *record_buf,long buf_size_in_byte) =0;

};

#endif /* GQRECORD_H_ */

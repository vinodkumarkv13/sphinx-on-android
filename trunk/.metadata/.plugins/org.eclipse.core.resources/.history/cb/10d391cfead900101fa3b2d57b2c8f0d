#ifndef GQRECORDSL_H_
#define GQRECORDSL_H_

#include "gqrecord.h"

#define RECORDER_FRAMES (16000 * 5)


class GqRecordSL: public GqRecord {
public:
	GqRecordSL();
	virtual ~GqRecordSL();

public:
	bool start_record();
	bool stop_record();


	virtual void received_buf_from_recorder();

private:
	bool create_sl_engine();
	bool create_sl_recorder();

	void init_recorder();


private:
	char *      m_p_sound_buf;
	// engine interfaces
	SLObjectItf m_sl_engine_object;
	SLEngineItf m_sl_engine_engine;

	// recorder interfaces
	SLObjectItf m_sl_recorder_object;
	SLRecordItf m_sl_recorder_record;
	SLAndroidSimpleBufferQueueItf m_sl_recorder_buf_queue;
};

#endif /* GQRECORDSL_H_ */

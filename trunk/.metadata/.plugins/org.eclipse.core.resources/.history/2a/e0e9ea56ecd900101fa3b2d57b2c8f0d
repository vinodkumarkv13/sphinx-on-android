#ifndef GQRECORD_H_
#define GQRECORD_H_

#include <SLES/OpenSLES.h>
#include <SLES/OpenSLES_Android.h>

class GqRecord {
public:
	GqRecord();
	virtual ~GqRecord() = 0;

public:
	virtual bool start_record() = 0;
	virtual bool pause_record() = 0;
	virtual bool stop_record() = 0;

	virtual void received_buf_from_recorder() =0;

};

#endif /* GQRECORD_H_ */

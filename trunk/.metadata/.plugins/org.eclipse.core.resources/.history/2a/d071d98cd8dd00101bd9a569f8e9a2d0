#include "../include/gqandroidsphinx.h"

GqAndroidSphinx::GqAndroidSphinx() {
	// TODO Auto-generated constructor stub

}

GqAndroidSphinx::~GqAndroidSphinx() {
	// TODO Auto-generated destructor stub
}

bool GqAndroidSphinx::init_sphinx() {
	cmd_ln_t *config = cmd_ln_init(NULL, ps_args(), TRUE, "-hmm",
			"/data/td/model/hmm/", "-lm",
			"/data/td/model/lm/zh_broadcastnews_64000_utf8.DMP", "-dict",
			"/data/td/model/lm/zh_broadcastnews_utf8.dic", NULL);
	if (config == NULL) {
		return false;
	}

	return true;
}

